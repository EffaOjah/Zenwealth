<!DOCTYPE html>
<html lang="en" data-theme="light"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- Title -->
  <title>Zenwealth ||Admin Login</title>
  
  <link rel="shortcut icon" type="image/png" href="/img/Zenwealth Logo Alone-02.png">
  
  <!-- Style CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/bootstrap-5.0.2-dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/iziToast-master/dist/css/iziToast.min.css">
  <script src="https://kit.fontawesome.com/a207e207d8.js" crossorigin="anonymous"></script>

</head>

<body style="background-image: url(/img/bg.jpg);">
  <!-- Preloader -->
  

  <!-- Internet Connection Status -->
  <!-- <div class="internet-connection-status" id="internetStatus" style="display: none; background-color: rgb(0, 184, 148);">Your internet connection is back.</div> -->

  <!-- Back Button -->
  <div class="login-back-button">
    <a href="/">
      <i class="fa-solid fa-arrow-left" style="color: #ba7e17;"></i>
    </a>
  </div>

  <!-- Login Wrapper Area -->
  <form action="/admin-login" method="post">
  <div class="login-wrapper d-flex align-items-center justify-content-center">
    <div class="custom-container">
      <div class="text-center px-4">
        <img class="login-intro-img" src="/img/zenith.png" style="height: 80px; box-shadow: 0px 0px 35px grey;" alt="">
      </div>

      <!-- Register Form -->
      <div class="register-form mt-4">
        <h6 class="mb-3 text-center text-white">Log in as an admin...</h6>

        
          <div class="form-group">
            <input class="form-control" type="text" id="username" name="username" placeholder="Username" style="box-shadow: 0px 0px 35px grey;">
          </div>

          <div class="form-group position-relative">
            <input class="form-control" id="psw-input" name="password" type="password" placeholder="Enter Password" style="box-shadow: 0px 0px 35px grey;">
            <div class="position-absolute" id="password-visibility">
              <i class="eye fa-regular fa-eye"></i>
              <i class="eye fa-regular fa-eye-slash"></i>            
            </div>
          </div>
            <button type="submit" class="bg-three btn w-100 text-white" style="box-shadow: 0px 0px 35px grey;">Sign In</button>
         
        
      </div>

      <!-- Login Meta -->
      
    </div>
  </div>
</form>

<span class="d-none" id="alertTitle"><%= locals.alertTitle %></span>
  <span class="d-none" id="alertMessage"><%= locals.alertMessage %></span>
  <span class="d-none" id="alertColor"><%= locals.alertColor %></span>


  <script>
    var alertTitle = document.getElementById("alertTitle");
    var alertMessage = document.getElementById("alertMessage");
    var alertColor = document.getElementById("alertColor");

    // Check if there is a response message
    document.addEventListener('DOMContentLoaded', ()=>{
      if (alertTitle.innerHTML || alertMessage.innerHTML || alertColor.innerHTML) {
        // alert('h')
        izitoastAlert(alertTitle.innerHTML, alertMessage.innerHTML, 'light', alertColor.innerHTML);
      } else {
        return;
      }
    })

   </script>

 <!--build:js-->
    <script src="/bootstrap-5.0.2-dist/js/bootstrap.bundle.min.js"></script>
    <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
    <script src="/js/alert.js"></script>
 <!--endbuild-->
 

</body>
</html>