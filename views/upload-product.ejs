      <div class="container-fluid d-flex align-items-center justify-content-center content">
        <div class="bg-overlay fixed-width radius-three p-4 pb-5 mt-4">
          <h6 class="text-white mt-2 mb-3">Upload Product</h6>
            <form action="#" method="post" enctype="multipart/form-data">
                <div class="row g-3">
    
                  <div class="form-floating">
                    <!-- <label class="form-label" for="firstname">Porduct/Gig Image</label> -->
